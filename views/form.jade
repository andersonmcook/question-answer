html
  head
    title Question & Answer
    link(rel='stylesheet' href='css/style.css')
  body
    form(method='POST' action='/question')
      .input-group
        label(for='question') Question
        input#question(type='text' name='question' autofocus required)
        label.colors(for='questioncolor') Question Color
        input#questioncolor(type='color' name='questioncolor')
      hr
      .input-group
        label(for='answer') Answer
        input#answer(type='text' name='answer' required)
        label.colors(for='answercolor') Answer Color
        input#answercolor(type='color' name='answercolor')
      hr
      .input-group
        label.colors(for='top') Top Color
        input#top(type='color' name='top' required)
      .input-group
        label.colors(for='bottom') Bottom Color
        input#bottom(type='color' name='bottom' required)
      .input-group
        input(type='submit', value='Submit')
